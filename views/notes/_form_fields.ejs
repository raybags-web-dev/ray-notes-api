<!-- note title -->
<div class="form-group">
    <label class="h4" for="title">Title</label>
    <input required value="<%= note.title %>" type="text" name="title" id="title" class="form-control shadow-lg  mb-2 bg-body rounded">
</div>
<!-- note description -->
<div class="form-group mt-4">
    <label class="h4" for="description">Description</label>
    <textarea required type="text" name="description" id="description" rows="10" class="form-control shadow-lg  mb-2 bg-body rounded">
        <%= note.description %>
    </textarea>
</div>

<div class="form-group mt-4">
    <label class="h4" for="markdown">Markdown</label>
    <textarea required type="text" name="markdown" id="markdown" rows="7" class="form-control shadow-lg  bg-body rounded">
        <%= note.markdown %>
    </textarea>
</div>
<a href="/" class="btn btn-secondary mt-4  shadow-sm rounded">Cancel process</a>
<button type="submit" class="btn btn-primary mt-4  shadow-sm rounded">Save note</button>