<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <div class="container pt-lg-4 pb-lg-4">
        <h1 class="mb-4 head text-center position-sticky">NOTES</h1>
        <a href="/notes/new" class="btn btn-success shadow-lg float-end text-uppercase">New note</a>
        <nav class="navbar">
            <form class="d-flex">
                <input class="form-control me-2 shadow-lg" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success shadow-lg" type="submit">Search</button>
            </form>
        </nav>
        <!-- card -->
        <% notes.forEach(note => { %>
            <div class="card mt-4 p-lg-2 shadow-lg bg-body rounded">
                <div class="card-body">
                    <h4 class="card-title text-uppercase text-muted">
                        <%= note.title %>
                    </h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= note.createdAt.toLocaleDateString()%>
                    </div>
                    <div class="card-text mb-2 bg-white text-dark">
                        <%= note.description %>
                    </div>
                    <hr>

                    <div class="card text-center border-white">
                        <div class="card-body">
                            <a href="notes/<%= note.slug %>" class="btn btn-primary text-white text-uppercase  shadow-lg">Read more</a>
                            <a href="/notes/edit/<%= note.id %>" class="btn btn-info text-white text-uppercase  shadow-lg">Edit note</a>

                            <form action="/notes/<%= note.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger shadow-lg text-uppercase">Delete note</button>
                            </form>
                        </div>
                    </div>


                </div>
                <div class="card-subtitle text-muted mb-2 p-lg-2">
                    <%= note.title %>
                </div>
            </div>
            <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>