<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
    <!-- favicon -->
    <link rel="icon" type="image/png" style="border-radius: 50px" sizes="32x32"
        href="https://github.com/raybags-web-dev/image_base/blob/master/images/logo/logo9_5_21257.jpeg?raw=true" />
    <!-- font awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        ::-webkit-scrollbar {
            width: 7px;
        }

        ::-webkit-scrollbar-track {
            background: rgb(118, 0, 0);
        }

        ::-webkit-scrollbar-thumb {
            background-color: black;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        div,
        p {
            color: rgb(189, 187, 187) !important;
            /*opacity: .8;*/
        }

        .card {
            background-image: linear-gradient(to top, #09203f 0%, #23323e 100%);
        }

        .background-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: .5;
            filter: blur(10px);
        }

        .background-image {
            width: 100%;
            height: 100%;
            background: url('https://github.com/raybags-web-dev/image_base/blob/master/images/background/uu.jpeg?raw=true') no-repeat center center fixed;
            background-size: cover;
        }

        .btn-cont {
            box-shadow: none;
            border: unset;
            background-color: unset !important;
        }
    </style>
</head>

<body class="bg-dark">
    <div class="background-container">
        <div class="background-image"></div>
    </div>
    <div class="container pt-lg-4 pb-lg-4">
        <h2 class="mb-4 head text-center position-sticky">PERSONAL NOTES</h2>
        <a href="/notes/new" class="btn btn-success shadow-lg float-end text-uppercase">New note</a>
        <nav class="navbar">
            <form class="d-flex">
                <input class="form-control me-2 shadow-lg" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success shadow-lg" type="submit">Search...</button>
            </form>
        </nav>
        <!-- card -->
        <% notes.forEach(note=> { %>
            <div class="card mt-4 p-lg-2 bg-transparent shadow-lg bg-body rounded">
                <div class="card-body bg-transparent">
                    <h4 class="card-title text-uppercase">
                        <%= note.title %>
                    </h4>
                    <div class="card-subtitle text-muted mb-2 bg-transparent">
                        <%= note.createdAt.toLocaleDateString()%>
                    </div>
                    <div class="card-text mb-2 bg-transparent">
                        <%= note.description %>
                    </div>
                    <hr>
                    <div class="container text-center">
                        <div class="btn-cont bg-transparent">
                            <a href="notes/<%= note.slug %>"
                                class="btn btn-secondary text-white text-uppercase bg-transparent  shadow-lg">Read
                                more</a>
                            <a href="/notes/edit/<%= note.id %>"
                                class="btn btn-info text-white text-uppercase bg-transparent shadow-lg">Edit note</a>

                            <form action="/notes/<%= note.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger shadow-lg text-uppercase">Delete
                                    note</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-subtitle text-muted mb-2 p-lg-2">
                    <%= note.title %>
                </div>
            </div>
            <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>